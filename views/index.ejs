<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head.ejs',{ pageName :  "Home" }) %>
    <%- include('partials/head.ejs', { pageName: context.image }) %>

<body> 
 
    <%- include('partials/nav.ejs') %>

    <main class="container">  
        <% for (let i = 0; i < photos.length; i++)  { %>
            <a class="link" href="/user/<%= photos[i].user._id %>">
                <div class="main-page-user">
                    <div>
                        <img class="user-image" src="<%= photos[i].user.image %>" alt="Picture of <%= photos[i].user.username %>">
                    </div>
                    <div>
                        <h2><%= photos[i].user.username %></h2>

                        <!-- <img src="https://placekitten.com/200/287"> -->
                    </div>

                    <div>
                        <img src="<%= photos[i].image %>">
                    </div>
                    
                  



                </div>
            </a>            
        <% } %>

     


        <a href="/user/new"><button>Make a new user account</button></a>

    </main>
</body>

</html> 