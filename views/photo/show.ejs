<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs') %>
    
<body>
        
        <%- include('../partials/nav.ejs') %>

    <main>
        <section class="container show-photo">
                <a href="/user/<%= onePhoto.user._id %>">
                    <img class="return-image" src="<%= onePhoto.user.image %>" alt="<%= onePhoto.user.username %>'s image">
                </a>
                <div class="container flex">
                    <section>
                        <div class="photo-show-div">                      
                                <div>
                                    <img src="<%= onePhoto.image %>" alt="an image" />                                    
                                </div>    
                                <div>
                                    <h2><%= onePhoto.caption %></h2>
                                </div>          
                                <div>
                                    <a href="/user/photos/comments/new/<%= onePhoto._id %>"><button class="button is-info is-small">Add a Comment!</button></a>
                                </div>
                        </div>
                    </section>
                </div>         
                    <div class="container">
                        <h2>Comments:</h2>
                        <% for (let i = 0; i < comments.length; i++) { %>
                            <div class="comment-div">
                                <p class="username"><span class="has-text-weight-semibold"><%= comments[i].username %></span> commented:</p>
                                <div class="comment">                            
                                    <p><%= comments[i].comment %></p>
                                    <form class="buttons is-right" method="POST" action="/user/photos/comments/<%=comments[i]._id%>?_method=DELETE">
                                        <input class="button is-warning is-small" type="submit" value="Delete Comment"/>
                                    </form>
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <!-- <div>
                        <input type="submit" value="Edit Comment: <%= onePhoto.name%>"/>
                    </div> -->                
                    <div class="buttons is-centered">
                        <a href="/user/photos/edit/<%= onePhoto.id %>"><button class="button is-warning is-small">Edit Photo Caption</button></a>
                        <form method="POST" action="/user/photos/<%=onePhoto._id%>?_method=DELETE">
                            <input class="button is-danger is-small" type="submit" value="Delete Picture"/>
                        </form>
                    </div>
        </section> 
    </main>
</body>

</html>