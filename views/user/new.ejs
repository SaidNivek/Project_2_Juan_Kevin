<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs',{ pageName :  "Home" }) %>

<body>
    <%- include('../partials/nav.ejs') %>


    <div class="field">        
        <form method="POST" action="/user">
            <h1>Register as a new user</h1>
                <div>
                    <label class="label" for="username"> Username: </label>
                    <input class="input" placeholder="Enter a username" id="username" name="username" type="text"  />
                </div>
                <div>
                    <label class="label" for="first_name"> First Name: </label>
                    <input class="input" placeholder="Enter your first name"id="first_name" name="first_name" type="text" />
                </div>
                <div>
                    <label class="label" for="last_name"> Last Name: </label>
                    <input class="input" placeholder="Enter your last name" id="last_name" name="last_name" type="text" />
                </div>
                <div>
                    <label class="label" for="image"> Profile Picture (url): </label>
                    <input class="input" placeholder="Enter a profile picture" id="image" name="image" type="text" />
                </div>
                <input class="button is-primary" type="submit" value="Register!">
            </form>
    </div>
</body>
</html>